{% for e in dbe %}
<div class="modal fade" id="editEventModal{{ e.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="editEventModalLabel{{ e.id }}" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-5">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editEventModalLabel{{ e.id }}">Edit Schedule</h1>
            </div>
            <div class="modal-body">
                
                <form class="row g-3" method="POST" action="{{ url_for('edit_event', event_id=e.id ) }}">
                    {{ edit_event_form[e.id].hidden_tag() }}

                    <div class="col-md-12">
                        {{ edit_event_form[e.id].title.label(class="form-label") }}
                        {{ edit_event_form[e.id].title(class="form-control") }}
                        {% for error in edit_event_form[e.id].title.errors %}
                        <div class="text-danger">{{ error }}</div>
                        {% endfor %}
                    </div>
                    <div class="col-md-12">
                        {{ edit_event_form[e.id].notes.label(class="form-label") }}
                        {{ edit_event_form[e.id].notes(class="form-control") }}
                        {% for error in edit_event_form[e.id].notes.errors %}
                        <div class="text-danger">{{ error }}</div>
                        {% endfor %}
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <div class="col-2">
                            {{ edit_event_form[e.id].color(class="event-color-select w-100") }}
                        </div>
                        <div class="col-8">
                            {{ edit_event_form[e.id].submit(class="btn btn-primary w-100") }}
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-primary" data-bs-target="#deleteEventModal{{ e.id }}"
                        data-bs-toggle="modal">Remove Schedule</button>
                </div>
                <div>
                    <form method="GET" action="{{ url_for('week_schedule') }}">
                        <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteEventModal{{ e.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="deleteEventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteEventModalLabel"><strong>{{ e.title }}</strong></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {% if e.recurring_days | length > 1 %}
                    <p>Are you sure you want to delete this series of events?</p>
                {% else %}
                    <p>Are you sure you want to delete this event?</p>
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="POST" action="{{ url_for('delete_event', event_id=e.id) }}">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                    <button type="submit" class="btn btn-primary">Positive</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endfor %}

